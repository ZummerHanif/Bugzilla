<div class="container">
  <h1>Welcome <%= current_user.name %>!</h1>

  <% if user_signed_in? %>
    <h2>Projects</h2>
    <% @projects.each do |project| %>
      <%= render partial: 'project', locals: { project: project } %>
    <% end %>

    <%= render partial: 'project_creation' %>

    <% if current_user.user_type == 'Qa' %>
      <h2>Your Assigned Projects:</h2>
      <% current_user.assigned_projects.each do |assigned_project| %>
        <%= render partial: 'project', locals: { project: assigned_project } %>
      <% end %>
    <% end %>

    <div class="logout-link">
      <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'links links-danger' %>
    </div>
  <% end %>
</div>
