<div class="custom-form">
  <h2 class="form-title">Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="input-row">
        <%= f.input :name, placeholder: 'Name', input_html: { class: 'input-field' } %>
      </div>

      <div class="input-row">
        <%= f.label :user_type, "User type", class: 'input-label' %>
        <%= f.select :user_type, ['Developer', 'Manager', 'Qa'], {}, { class: 'select-input', placeholder: 'User type' } %>
      </div>

      <div class="input-row">
        <%= f.input :email, placeholder: 'Email', input_html: { class: 'input-field', autocomplete: 'email' } %>
      </div>

     <div class="input-row">
        <%= f.input :password, placeholder: 'Password *minimum 6 characters', input_html: { class: 'input-field password-input', autocomplete: 'new-password' } %>

      </div>

      <div class="input-row">
        <%= f.input :password_confirmation, placeholder: 'Password confirmation', input_html: { class: 'input-field', autocomplete: 'new-password' } %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, 'Sign up', class: 'submit-button' %>
    </div>
  <% end %>

  <%= render 'devise/shared/links' %>
</div>
