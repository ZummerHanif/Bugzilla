<div class="custom-form">
  <h2 class="form-title">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
    <div class="form-inputs">
      <div class="input-row">
        <%= f.input :email, placeholder: 'Email', input_html: { class: 'input-field', autocomplete: 'email' } %>
      </div>

      <div class="input-row">
        <%= f.input :password, placeholder: 'Password', input_html: { class: 'input-field', autocomplete: 'current-password' } %>
      </div>

      <div class="input-row">
        <% if devise_mapping.rememberable? %>
          <%= f.input :remember_me, as: :boolean %>

        <% end %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'forgot-password-link' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, 'Log in', class: 'submit-button' %>
    </div>
  <% end %>

  <%= link_to "Sign up", new_registration_path(resource_name), class: 'signup-link' %>
</div>
