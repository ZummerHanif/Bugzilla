<h1>Create a new Bug for <%= @project.name %></h1>

<%= form_with(model: [@project, @bug], local: true) do |form| %>
  <% if @bug.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bug.errors.count, 'error') %> prohibited this bug from being saved:</h2>
      <ul>
        <% @bug.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :bug_type %>
    <%= form.select :bug_type, Bug.bug_types.keys.map { |bug_type| [bug_type.humanize, bug_type] } %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, Bug.statuses.keys.map { |status| [status.humanize, status] } %>
  </div>



  <div class="field">
    <%= form.label :deadline %>
    <%= form.date_field :deadline %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :screenshot %>
    <%= form.file_field :screenshot %>
  </div>

  <div class="actions create-bug-btn">
    <%= form.submit %>
  </div>

  <div>
    <%= link_to 'Back', :back, class: 'back-button' %>
  </div>

<% end %>
