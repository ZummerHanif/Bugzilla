<h1>Bugs for <%= @project.name %></h1>
<% @bugs.each do |bug| %>
  <div class="bug">
    <div class="bug-details">
      <h2><%= bug.title %></h2>
      <p>Status: <%= bug.status %></p>
      <p>Type: <%= bug.bug_type %></p>
    </div>
    <div class="bug-actions">
      <% if current_user.developer? %>
        <% if bug.assignee == current_user %>
          <%= form_for bug, url: project_bug_path(@project, bug), method: :patch do |f| %>
            <div class="form-group">
              <%= f.label :status, 'Update Status', class: 'control-label' %>
              <%= f.text_field :status, class: 'form-control', placeholder: 'Enter "resolved"' %>
            </div>
            <%= f.submit 'Update Status', class: 'btn btn-primary' %>
          <% end %>
          <% else %>
          <%= link_to 'Assign to Me', assign_project_bug_path(@project, bug), method: :post, class: 'btn btn-primary' %>
         <% end %>
        <% end %>

    </div>
  </div>
<% end %>

<%= link_to 'Back', projects_path, class: 'btn btn-secondary back-button' %>
<% if policy(current_user).qa? %>
  <%= link_to 'New Bug', new_project_bug_path(@project), class: 'New-Bug-button' %>
<% end %>
